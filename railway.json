{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "DJANGO_SETTINGS_MODULE=bigoh_django.settings_prod gunicorn -c gunicorn.conf.py bigoh_django.wsgi:application",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": { 
      "us-east4-eqdc4a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
